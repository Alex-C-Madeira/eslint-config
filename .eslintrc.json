{
  "env": {
    "es2021": true
  },
  "extends": [
    "standard",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "simple-import-sort"
  ],
  "rules": {
    "@typescript-eslint/no-var-requires": "off"
  },
  "ignorePatterns": [
    "node_modules"
  ]
}