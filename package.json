{
  "name": "@wooden-script/eslint-config",
  "version": "0.0.0",
  "private": false,
  "license": "MIT",
  "author": "Alex Madeira <alex.c.madeira@gmail.com>",
  "description": "Wooden Script ESLint Config simplifies the task of maintaining clean and consistent code in your JavaScript and TypeScript projects. Tailored by Alex Madeira, it offers straightforward configurations for React and Node.js applications. Integrated with Prettier, this ESLint setup ensures code adheres to standards while maintaining a neatly formatted codebase.",
  "repository": "alexmadeira/eslint-config",
  "homepage": "https://github.com/alexmadeira/eslint-config",
  "keywords": [
    "eslint",
    "config",
    "typescript",
    "react",
    "prettier",
    "linting",
    "code style",
    "javascript",
    "nodejs",
    "configuration"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": ["eslint --fix"]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "eslint": "^8.0.0",
    "typescript": ">=5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "prettier": "^3.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "semantic-release": "^23.0.2"
  }
}
